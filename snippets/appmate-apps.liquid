{% assign wishlist_king = true %}
{% assign cookie_lawyer = true %}

{{ 'https://az814789.vo.msecnd.net/toolkit/1.1.7/appmate.js' | script_tag }}

<script type="text/javascript">
    ;(function(){
        if (typeof Appmate === 'undefined') return; // In case lib didn't load.

        Appmate.init({
            shop: {
                domain: '{{ shop.domain }}'
            },

            session: {
              customer: '{{ customer.id }}'
            },

            globals: {
                settings: {{ settings | json }},
                cookie_policy_handle: '{{ pages.cookie-policy.handle }}'
            }
        });
    })();
</script>

{% if wishlist_king == true %}
    {{ 'appmate-wishlist-king.scss.css' | asset_url | stylesheet_tag }}
    {% include 'appmate-wishlist-king' %}
{% endif %}

{% if cookie_lawyer == true %}
    {{ 'appmate-cookie-lawyer.scss.css' | asset_url | stylesheet_tag }}
    {% include 'appmate-cookie-lawyer' %}
{% endif %}
